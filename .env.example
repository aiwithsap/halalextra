# HalalExtra Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/halalextra

# JWT Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-use-256-bit-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Default Admin Configuration (for initial setup only)
DEFAULT_ADMIN_PASSWORD=change-this-secure-password-immediately

# Session Security
SESSION_SECRET=your-super-secure-session-secret-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window
SLOW_DOWN_WINDOW_MS=900000  # 15 minutes
SLOW_DOWN_DELAY_AFTER=50  # requests before delay
SLOW_DOWN_DELAY_MS=500  # delay in milliseconds

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173  # Development origins
# Production: ALLOWED_ORIGINS=https://halalextra-production.up.railway.app

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/tmp/uploads

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password  # Use App Password for Gmail

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Security Configuration
BLACKLISTED_IPS=  # Comma-separated list of blocked IP addresses
LOG_LEVEL=info  # error, warn, info, http, debug

# Railway GraphQL API (for deployment monitoring)
RAILWAY_API_KEY=b778d147-4a26-4c82-8a51-72aa48c76aeb
PROJECT_ID=d60b5164-78fd-4260-b37b-6a6bfdb04404
ENVIRONMENT_ID=b7f05a51-8509-4a69-afad-e8cdeebb7d33

# Production Security Settings (uncomment for production)
# HSTS_MAX_AGE=31536000  # 1 year
# CSP_REPORT_URI=https://your-domain.com/csp-report
# SECURITY_MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook